<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.edu.udea.compumovil.gr01.walkapp.fragments.main.MyRoutesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:text="Rutas favoritas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:id="@+id/textView"
                android:textColor="@android:color/black"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <!--- Separador -->
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/darker_gray"
            android:layout_above="@+id/option2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <!--- Opcion RIo Grande -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/option1"
            android:onClick="abrirMapa"
            android:clickable="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/image1"
                    android:scaleType="fitXY"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rio Grande /"
                    android:textSize="20dp"
                    android:id="@+id/site1"
                    android:textColor="@android:color/background_dark"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nivel: 5"
                    android:textSize="20dp"
                    android:id="@+id/rating1"
                    android:paddingTop="10dp"
                    android:textColor="@android:color/background_dark"
                    android:paddingBottom="10dp"/>
            </LinearLayout>
        </LinearLayout>

        <!--- Separador -->
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/darker_gray"
            android:layout_above="@+id/option2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <!--- Opcion San Felix -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/option1"
            android:id="@+id/option2"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"

            android:onClick="abrirMapa"
            android:clickable="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/image2"
                    android:scaleType="fitXY"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="San FÃ©lix /"
                    android:textSize="20dp"
                    android:id="@+id/site2"
                    android:textColor="@android:color/background_dark"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nivel: 4"
                    android:textSize="20dp"
                    android:id="@+id/rating2"
                    android:paddingTop="10dp"
                    android:textColor="@android:color/background_dark"
                    android:paddingBottom="10dp"/>
            </LinearLayout>
        </LinearLayout>

        <!--- Separador -->
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/darker_gray"
            android:layout_above="@+id/option2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </LinearLayout>


</FrameLayout>
