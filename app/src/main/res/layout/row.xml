<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/image1"
                android:layout_width="wrap_content"
                android:layout_height="115dp"
                android:id="@+id/ivRowImage" />

        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Nombre de la ruta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvRowNombre"
                android:textSize="17sp"
                android:padding="4dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:text="Por: Username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvRowUsername"
                android:padding="4dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:text="Dificultad: 5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvRowDificultad"
                android:padding="4dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:text="Clima: Templado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvRowClima"
                android:padding="4dp"
                android:textColor="@android:color/black"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RatingBar
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            android:numStars="5"
            android:stepSize=".5"
            android:layout_width="wrap_content"
            android:rating="3"
            android:isIndicator="false"

            style="@android:style/Widget.DeviceDefault.Light.RatingBar" />
    </LinearLayout>

</LinearLayout>